#!/usr/bin/env php
<?php declare(strict_types=1);

use Symfony\Component\Finder\Finder;

require_once __DIR__ . '/../vendor/autoload.php';

if (!isset($argv[1])) {
    echo 'No output filename supplied', PHP_EOL;
    exit(1);
}

$pharFile = $argv[1];
$baseDir = dirname(__DIR__);

if (is_file($pharFile)) {
    unlink($pharFile);
}

$finder = (new Finder())
    ->files()
    ->in([
        $baseDir . '/',
    ])
    ->exclude([
        $baseDir . '/.github',
        $baseDir . '/bin',
        $baseDir . '/build',
        $baseDir . '/resources',
        $baseDir . '/tests',
        $baseDir . '/var',
    ])
    ->notName([
        $baseDir . '/.*',
        $baseDir . '/Dockerfile',
        $baseDir . '/Makefile',
        $baseDir . '/symfony.lock',
        $baseDir . '/*phpunit*',
    ])
    ->notPath('tests');

$stub = "#!/usr/bin/env php\n";
$stub .= "<?php Phar::mapPhar('ifsc-calendar.phar');\n";
$stub .= "require 'phar://ifsc-calendar.phar/app/run.php';\n";
$stub .= "__HALT_COMPILER();";

$phar = new Phar($pharFile);
$phar->setStub($stub);
$phar->compress(Phar::GZ);
$phar->buildFromIterator($finder->getIterator(), $baseDir);

echo "$pharFile successfully created", PHP_EOL;
